@model List<CourseViewModel>
@{
    ViewData["Title"] = "Courses";
    Layout = "_DesignLayout";
}

<div class="text">
    <h2 data-text="Courses">Courses</h2>
</div>

<div>
    <table class="table table-striped table-bordered">
        <thead >
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                foreach (var crs in Model)
                {
                    <tr>
                        <td>@crs.Id</td>
                        <td>@crs.Name</td>
                        <td>
                            <a asp-action="Details" asp-controller="Course" asp-route-Id="@crs.Id" class="btn info">Details</a>
                            <a asp-action="Edit" asp-controller="Course" asp-route-Id="@crs.Id" class="btn success">Edit</a>
                            <a asp-action="Delete" asp-controller="Course" asp-route-Id="@crs.Id" class="btn danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No Courses yet</td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Create" asp-controller="Course" class="btn success ">Add</a>
</div>
