@model IEnumerable<ExamTakenViewModel>

@{
    ViewData["Title"] = "Exam Grades";
}

<h1>Exam Grades</h1>
@if (Model != null && Model.Count() > 0)
{
    <p class="mb-0"><strong>Exam:</strong> @Model.ElementAt(0).ExamTitle</p>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Student</th>
            <th>Grade</th>
            <th>Answers</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var examTaken in Model)
            {
                <tr>
                    <td>@examTaken.StudentName</td>
                    <td>
                        @examTaken.Grade
                    </td>
                    <td>
                        <a asp-action="StudentAnswers" asp-route-examId="@examTaken.ExamId" asp-route-stdId="@examTaken.StudentId" class="btn success">Answers</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No grades for this exam!</td>
            </tr>
        }
    </tbody>
</table>