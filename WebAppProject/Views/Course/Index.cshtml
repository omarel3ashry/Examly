@model List<Course>
@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                foreach (Course crs in Model)
                {
                    <tr>
                        <td>@crs.Id</td>
                        <td>@crs.Name</td>
                        <th>
                            <a asp-action="Details" asp-controller="Course" asp-route-Id="@crs.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-controller="Course" asp-route-Id="@crs.Id" class="btn btn-success">Edit</a>
                            <a asp-action="Delete" asp-controller="Course" asp-route-Id="@crs.Id" class="btn btn-danger">Delete</a>
                        </th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No Courses yet</td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Create" asp-controller="Course" class="btn btn-outline-primary ">Add</a>
</div>
