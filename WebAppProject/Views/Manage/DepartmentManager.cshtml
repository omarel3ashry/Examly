@model IEnumerable<Instructor>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
            foreach (var instructor in Model)
            {
                <tr>
                    <td>@instructor.Id</td>
                    <td>@instructor.Name</td>
                    <td>
                        <a class="btn btn-info" asp-action="AssignManager" asp-controller="Manage" asp-route-deptId="3" asp-route-insId="@instructor.Id">Assign Manager</a>
                    </td>
                </tr>
            }
        else
        {
            <tr>
                <td colspan="3">No Instructors in this branch </td>
            </tr>
        }
    </tbody>
</table>