@model QuestionViewModel
@{
}
<div id="trueFalseContainer">
    <input asp-for="Choices[0].Id" value="@Model.Choices[0].Id" hidden />
    <input asp-for="Choices[1].Id" value="@Model.Choices[1].Id" hidden />
    <div class="form-group">
        <label for="true">True</label>
        <input id="true" type="radio" asp-for="Choices[0].Text" value="True" />
    </div>
    <div class="form-group">
        <label for="false">False</label>
        <input id="false" type="radio" asp-for="Choices[0].Text" value="False" />
    </div>
</div>
